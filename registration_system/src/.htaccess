RewriteEngine On

# Set the public directory as the base directory
RewriteBase /registration_system/

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)$ public/$1.php [L]

# Redirect to index.php if no file is specified
RewriteRule ^$ public/index.php [L]

# Prevent access to sensitive folders
RewriteRule ^(includes|src)/ - [F,L]